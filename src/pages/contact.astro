---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
---

<Layout title="Contact - Versa">
    <div class="pt-32 pb-24 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
            <div>
                <h1
                    class="text-4xl md:text-6xl font-bold text-white mb-6 font-outfit"
                >
                    Let's build something <br /> amazing.
                </h1>
                <p class="text-xl text-muted mb-12">
                    Ready to accelerate your roadmap? Fill out the form or book
                    a call directly with our engineering lead.
                </p>

                <div class="space-y-8">
                    <div>
                        <h3 class="text-white font-bold mb-2">Email Us</h3>
                        <a
                            href="mailto:hello@versahq.online"
                            class="text-primary hover:underline text-lg"
                            >sales@versahq.online</a
                        >
                    </div>
                    <div>
                        <h3 class="text-white font-bold mb-2">Contact Us</h3>
                        <p class="text-muted">
                            +1 602-838-0848<br />
                            +91 799-364-0715
                        </p>
                    </div>
                </div>
            </div>

            <div class="bg-card border border-border rounded-2xl p-8">
                <form class="space-y-6">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <div>
                            <label
                                for="name"
                                class="block text-sm font-medium text-muted mb-2"
                                >Name</label
                            >
                            <input
                                type="text"
                                id="name"
                                class="w-full bg-background border border-border rounded-lg px-4 py-3 text-white focus:outline-none focus:border-primary transition-colors"
                                placeholder="John Doe"
                            />
                        </div>
                        <div>
                            <label
                                for="email"
                                class="block text-sm font-medium text-muted mb-2"
                                >Email</label
                            >
                            <input
                                type="email"
                                id="email"
                                class="w-full bg-background border border-border rounded-lg px-4 py-3 text-white focus:outline-none focus:border-primary transition-colors"
                                placeholder="john@company.com"
                            />
                        </div>
                    </div>
                    <div>
                        <label
                            for="message"
                            class="block text-sm font-medium text-muted mb-2"
                            >How can we help?</label
                        >
                        <textarea
                            id="message"
                            rows="4"
                            class="w-full bg-background border border-border rounded-lg px-4 py-3 text-white focus:outline-none focus:border-primary transition-colors"
                            placeholder="Tell us about your project..."
                        ></textarea>
                    </div>
                    <Button type="submit" class="w-full">Send Message</Button>
                </form>

                <div class="mt-8 pt-8 border-t border-border text-center">
                    <p class="text-sm text-muted mb-4">
                        Or skip the email and book directly:
                    </p>
                    <a
                        href="https://zcal.co/i/zPSEeSbY"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 text-white font-medium hover:text-primary transition-colors"
                    >
                        <span>ðŸŽ¥ Schedule a Meeting</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</Layout>
