---
import Layout from '../layouts/Layout.astro';

const projects = [
    {
        client: "FinTech Corp",
        title: "Modernizing a Legacy Trading Platform",
        metrics: ["50% faster execution", "99.99% uptime"],
        image: "bg-gradient-to-br from-blue-900 to-slate-900"
    },
    {
        client: "HealthAI",
        title: "AI-Powered Diagnostic Assistant",
        metrics: ["10k+ daily users", "HIPAA Compliant"],
        image: "bg-gradient-to-br from-teal-900 to-emerald-900"
    },
    {
        client: "ShopGlobal",
        title: "E-Commerce Headless Migration",
        metrics: ["200% conversion lift", "Global CDN"],
        image: "bg-gradient-to-br from-purple-900 to-indigo-900"
    }
];
---

<Layout title="Case Studies - Versa">
    <div class="pt-32 pb-24 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-12 font-outfit">Our Work</h1>
        
        <div class="grid grid-cols-1 gap-12">
            {projects.map(p => (
                <div class="group relative overflow-hidden rounded-3xl border border-border bg-card">
                    <div class="grid grid-cols-1 md:grid-cols-2">
                        <div class={`h-64 md:h-auto ${p.image} p-8 flex items-center justify-center`}>
                             <span class="text-white/20 text-6xl font-bold font-outfit">{p.client.charAt(0)}</span>
                        </div>
                        <div class="p-8 md:p-12 flex flex-col justify-center">
                            <p class="text-primary text-sm font-bold uppercase tracking-wider mb-2">{p.client}</p>
                            <h3 class="text-3xl font-bold text-white mb-4">{p.title}</h3>
                            <div class="flex flex-wrap gap-4 mb-8">
                                {p.metrics.map(m => (
                                    <span class="px-3 py-1 rounded-full bg-white/5 border border-white/10 text-xs text-white">
                                        {m}
                                    </span>
                                ))}
                            </div>
                            <a href="/contact" class="text-white font-medium hover:text-primary transition-colors flex items-center gap-2">
                                Read Case Study <span class="text-xl">&rarr;</span>
                            </a>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</Layout>
