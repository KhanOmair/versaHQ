---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
import Button from "../components/Button.astro";

// Placeholder data
const services = [
  {
    title: "Web & Mobile App",
    desc: "High-performance applications built with modern frameworks.",
  },
  {
    title: "Cloud Infrastructure",
    desc: "Scalable, secure, and cost-effective cloud solutions.",
  },
  {
    title: "AI Integration",
    desc: "Smart automation and data-driven insights for your business.",
  },
  {
    title: "DevOps & Security",
    desc: "Streamlined CI/CD pipelines and robust security protocols.",
  },
];

const features = [
  { title: "Speed", value: "10x", desc: "Faster deployment times" },
  { title: "Scale", value: "1M+", desc: "Concurrent users supported" },
  { title: "Save", value: "40%", desc: "Reduction in infra costs" },
];
---

<Layout title="Versa - Modern Software Solutions">
  <Hero />

  <!-- Problem/Solution Section -->
  <section class="py-24 bg-card/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">
          Stop Wrestling With Legacy Code.
        </h2>
        <p class="text-xl text-muted">
          Your team spends too much time maintaining old systems. We help you
          modernize, automate, and scale so you can focus on innovation.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          features.map((f) => (
            <div class="text-center p-8 border border-border rounded-2xl bg-background/50">
              <p class="text-5xl font-bold text-primary mb-2 font-outfit">
                {f.value}
              </p>
              <h3 class="text-xl font-bold text-white mb-2">{f.title}</h3>
              <p class="text-muted">{f.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-24 relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div
        class="flex flex-col md:flex-row justify-between items-center md:items-end mb-12 gap-6 text-center md:text-left"
      >
        <div>
          <div
            class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 border border-primary/20 text-xs font-medium text-primary mb-4"
          >
            Our Expertise
          </div>
          <h2 class="text-3xl md:text-5xl font-bold text-white">
            Comprehensive Solutions <br /> for Digital Growth.
          </h2>
        </div>
        <Button href="/services" variant="outline">View All Services</Button>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          services.map((s) => (
            <Card title={s.title}>
              <p class="text-muted mb-6">{s.desc}</p>
              <a
                href="/services"
                class="text-primary text-sm font-medium hover:underline inline-flex items-center gap-1"
              >
                Learn more <span>&rarr;</span>
              </a>
            </Card>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Game Teaser -->
  <!-- <section
    class="py-24 bg-background border-y border-border relative overflow-hidden"
  >
    <div
      class="absolute top-0 right-0 w-1/2 h-full bg-linear-to-l from-primary/5 to-transparent pointer-events-none"
    >
    </div>
    <div
      class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center"
    >
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Need a break?
      </h2>
      <p class="text-muted mb-8 max-w-xl mx-auto">
        Test your reflexes in our custom-built "Latency Runner" minigame. How
        fast can you deploy?
      </p>
      <Button href="/game" size="lg" class="animate-bounce"
        >Play Latency Runner</Button
      >
    </div>
  </section> -->

  <!-- CTA Section -->
  <section class="py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-primary/5"></div>
    <div class="max-w-4xl mx-auto px-4 relative z-10 text-center">
      <h2 class="text-4xl md:text-6xl font-bold text-white mb-8">
        Ready to transform your business?
      </h2>
      <p class="text-xl text-muted mb-10">
        Join leading enterprises who trust Versa for their mission-critical
        software.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" size="lg">Book a Consultation</Button>
        <Button href="/pricing" variant="secondary" size="lg"
          >View Pricing</Button
        >
      </div>
    </div>
  </section>
</Layout>
