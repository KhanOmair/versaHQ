---
import Layout from '../layouts/Layout.astro';
import GameComponent from '../components/Game.jsx';
---

<Layout title="Latency Runner - Versa">
    <div class="pt-32 pb-24 min-h-screen flex flex-col items-center justify-center">
        <div class="container mx-auto px-4">
             <div class="text-center mb-12">
                 <h1 class="text-4xl font-bold text-white font-outfit mb-4">Escape the Latency</h1>
                 <p class="text-muted">Don't let lag spikes ruin your infrastructure.</p>
             </div>
             
             <GameComponent client:load />
             
             <div class="mt-12 text-center">
                 <a href="/" class="text-primary hover:text-white transition-colors">Back to Home</a>
             </div>
        </div>
    </div>
</Layout>
