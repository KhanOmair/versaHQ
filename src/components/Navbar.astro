---
import { Image } from "astro:assets";
import versaLogo from "../assets/versa_logo.png";
---

<nav
  class="fixed w-full z-50 bg-background/80 backdrop-blur-md border-b border-border transition-all duration-300"
  id="navbar"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <div class="shrink-0">
        <a href="/" class="flex items-center gap-2">
          <Image src={versaLogo} alt="Versa Logo" class="h-10 w-auto" />
          <span class="font-outfit font-bold text-xl text-white">Versa</span>
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a
            href="/"
            class="text-sm font-medium text-main hover:text-primary transition-colors"
            >Home</a
          >
          <a
            href="/services"
            class="text-sm font-medium text-main hover:text-primary transition-colors"
            >Services</a
          >
          <a
            href="/solutions"
            class="text-sm font-medium text-main hover:text-primary transition-colors"
            >Solutions</a
          >
          <!-- <a
            href="/case-studies"
            class="text-sm font-medium text-main hover:text-primary transition-colors"
            >Case Studies</a
          > -->
          <a
            href="/pricing"
            class="text-sm font-medium text-main hover:text-primary transition-colors"
            >Pricing</a
          >
          <a
            href="/blog"
            class="text-sm font-medium text-main hover:text-primary transition-colors"
            >Blog</a
          >
          <a
            href="/contact"
            class="text-sm font-medium text-main hover:text-primary transition-colors"
            >Contact</a
          >
        </div>
      </div>

      <!-- CTA -->
      <div class="hidden md:block">
        <a
          href="/contact"
          class="px-5 py-2.5 rounded-full bg-primary text-white text-sm font-medium hover:bg-primary-hover transition-colors shadow-lg shadow-primary/20"
        >
          Book a Call
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="-mr-2 flex md:hidden">
        <button
          type="button"
          class="inline-flex items-center justify-center p-2 rounded-md text-main hover:text-white hover:bg-card focus:outline-none"
          aria-controls="mobile-menu"
          aria-expanded="false"
          id="mobile-menu-btn"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="block h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    class="md:hidden hidden bg-background border-b border-border"
    id="mobile-menu"
  >
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a
        href="/"
        class="block px-3 py-2 rounded-md text-base font-medium text-main hover:text-white hover:bg-card"
        >Home</a
      >
      <a
        href="/services"
        class="block px-3 py-2 rounded-md text-base font-medium text-main hover:text-white hover:bg-card"
        >Services</a
      >
      <a
        href="/solutions"
        class="block px-3 py-2 rounded-md text-base font-medium text-main hover:text-white hover:bg-card"
        >Solutions</a
      >
      <!-- <a
        href="/case-studies"
        class="block px-3 py-2 rounded-md text-base font-medium text-main hover:text-white hover:bg-card"
        >Case Studies</a
      > -->
      <a
        href="/pricing"
        class="block px-3 py-2 rounded-md text-base font-medium text-main hover:text-white hover:bg-card"
        >Pricing</a
      >
      <a
        href="/blog"
        class="block px-3 py-2 rounded-md text-base font-medium text-main hover:text-white hover:bg-card"
        >Blog</a
      >
      <a
        href="/contact"
        class="block px-3 py-2 rounded-md text-base font-medium text-main hover:text-white hover:bg-card"
        >Contact</a
      >
      <div class="pt-4">
        <a
          href="/contact"
          class="block w-full text-center px-5 py-3 rounded-full bg-primary text-white text-base font-medium hover:bg-primary-hover"
        >
          Book a Call
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");

  if (btn && menu) {
    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  }
</script>
