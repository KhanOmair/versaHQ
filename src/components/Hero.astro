---
import Button from "./Button.astro";
import HeroAnimation from "./HeroAnimation.jsx";
---

<section class="relative pt-32 pb-20 lg:pt-48 lg:pb-32 overflow-hidden">
  <!-- Background Glow -->
  <div
    class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[500px] bg-primary/10 rounded-full blur-[100px] opacity-50 -z-10 pointer-events-none"
  >
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="hero-content">
        <!-- <div class="hero-badge inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-xs font-medium text-accent mb-6 opacity-0 translate-y-4">
          <span class="w-2 h-2 rounded-full bg-accent animate-pulse"></span>
          v2.0 is now live
        </div> -->

        <h1
          class="hero-title text-5xl lg:text-7xl font-bold font-outfit text-white leading-tight mb-6 opacity-0 translate-y-8"
        >
          Scale your <br />
          <span
            class="text-transparent bg-clip-text bg-linear-to-r from-primary to-accent"
            >potential.</span
          >
        </h1>

        <p
          class="hero-desc text-lg lg:text-xl text-muted mb-8 max-w-xl opacity-0 translate-y-4"
        >
          Versa provides enterprise-grade software solutions to modernize your
          infrastructure, automate workflows, and accelerate growth.
        </p>

        <div class="hero-btns flex flex-wrap gap-4 opacity-0 translate-y-4">
          <Button href="/contact" size="lg">Start Building</Button>
          <!-- <Button href="/case-studies" variant="outline" size="lg">View Our Work</Button> -->
        </div>

        <div
          class="mt-12 flex items-center gap-6 opacity-0 translate-y-4 hero-stats"
        >
          <div>
            <p class="text-3xl font-bold text-white font-outfit">99.9%</p>
            <p class="text-sm text-muted">Uptime Guaranteed</p>
          </div>
          <div class="w-px h-10 bg-border"></div>
          <div>
            <p class="text-3xl font-bold text-white font-outfit">80%</p>
            <p class="text-sm text-muted">Cost Reduction</p>
          </div>
        </div>
      </div>

      <!-- Visual Content -->
      <div class="hero-visual opacity-0 scale-95 hidden lg:block">
        <HeroAnimation client:only="react" />
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";

  const tl = gsap.timeline({ defaults: { ease: "power3.out" } });

  tl.to(".hero-badge", { y: 0, opacity: 1, duration: 0.8 })
    .to(".hero-title", { y: 0, opacity: 1, duration: 1, stagger: 0.1 }, "-=0.6")
    .to(".hero-desc", { y: 0, opacity: 1, duration: 0.8 }, "-=0.8")
    .to(".hero-btns", { y: 0, opacity: 1, duration: 0.8 }, "-=0.6")
    .to(".hero-stats", { y: 0, opacity: 1, duration: 0.8 }, "-=0.6")
    .to(
      ".hero-visual",
      { scale: 1.5, opacity: 1, duration: 1.2, ease: "back.out(1.7)" },
      "-=1",
    );
</script>
