---
interface Props {
  title?: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<div class={`bg-card border border-border rounded-2xl p-6 hover:border-primary/50 transition-colors duration-300 ${className || ''}`}>
  {title && <h3 class="text-xl font-bold text-white mb-3 font-outfit">{title}</h3>}
  <slot />
</div>
